
  <%= simple_form_for @post do |f| %>
    <div class="dropdown-toggle">
    <%= f.collection_select :category_id, Category.all, :id, :name, { prompt: "분야를 선택해 주세요."}, input_html: { class: "dropdown-toggle" } %></div> (* 분야를 꼭 선택해 주세요.)
    <!-- # <%= f.input :image, input_html: { class: "form-control" } %> -->
    <div class="form-group">
    <%= f.input :title, label: "제목", input_html: { class: "form-control" } %>
    </div>
    <!-- # <%= f.input :link, input_html: { class: "form-control" } %> -->
    <div class="form-group">
    <%= f.input :description, label: "당신의 이야기", input_html: { class: "form-control" } %></br>
    </div>
    <%= f.button :submit %>
  <% end %>


